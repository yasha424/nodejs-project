{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "plugins": ["sonarjs"],
  "extends": ["airbnb-base", "plugin:sonarjs/recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": 0,
    "import/prefer-default-export": 0,
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    "import/extensions": 0,
    "func-names": 0
  }
}
