  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "serve": "nodemon app.js",
    "start": "node app.js",
    "eslint:check": "eslint \"**/*.js\" --ignore-path .gitignore",
    "eslint:fix": "eslint --fix \"**/*.js\" --ignore-path .gitignore",
    "prettier:check": "prettier --check . --ignore-path .gitignore",
    "prettier:fix": "prettier --write . --ignore-path .gitignore",
    "check-all": "npm run eslint:check && npm run prettier:check",
    "fix-all": "npm run eslint:fix && npm run prettier:fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yasha424/nodejs-project.git"
  },
